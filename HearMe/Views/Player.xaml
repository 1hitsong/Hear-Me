<Window x:Class="HearMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HearMe"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        Background="White"
        BorderBrush="LightGray" BorderThickness="1"
        Title="Hear Me" Height="400" Width="300">
    <Grid Background="#202020" Drop="AddToPlaylist" AllowDrop="True">
        <Image x:Name="cover" Source="{Binding AlbumArt}" HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="50"/>
        <Button BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="X" Width="20" Height="20" HorizontalAlignment="Left" Click="Window_Close" Canvas.Left="180" Margin="278,0,0,378" FontFamily="Segoe UI Light" Foreground="#f7f7f7" />
        <Button x:Name="previousButton" Content="&#9198;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Click="Previous" Margin="20,125,0,0"/>
        <Button x:Name="stopButton" Content="&#9724;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Stop" Margin="160,125,0,0"/>
        <Button x:Name="playButton" Content="&#9199;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Play" Margin="60,125,0,0"/>
        <Button x:Name="nextButton" Content="&#9197;" HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Click="Next" Margin="250,125,0,0"/>
        <Slider x:Name="seekBar" Value="{Binding PlayingSongPosition}" HorizontalAlignment="Left" Margin="10,77,0,0" Minimum="0" Maximum="{Binding PlayingSongLength}" VerticalAlignment="Top" Width="170" Thumb.DragStarted="Slider_DragStarted" Thumb.DragCompleted="GoToPosition"/>
        <Slider x:Name="volumeBar" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="202,77,0,0" ValueChanged="SetVolume" Width="80" Value="6"/>
        <Label x:Name="songTime"  Content="{Binding DisplayText}" HorizontalAlignment="right" VerticalAlignment="Top" Margin="0,92,120,0" Foreground="White"/>
        <Label x:Name="songTitle" Content="{Binding PlayingSongTitle}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,30,0,0" Foreground="White"/>
        <Label x:Name="clearPlaylist" Content="Clear" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="245,145,0,0" Foreground="White" Height="25" MouseDown="ClearPlaylist"/>
        <ListBox Background="#e7e7e7" AlternationCount="2"  x:Name="playlist" MouseDoubleClick="PlaySongFromPlaylist" SelectedValuePath="Filename" ItemsSource="{Binding Playlist.Files}" HorizontalAlignment="Left" Height="184" VerticalAlignment="Top" Width="272" Margin="10,175,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Grid.ColumnSpan="3" Orientation="Horizontal">
                        <Label Content="{Binding Artist}" />
                        <Label>-</Label>
                        <Label Content="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>

    <Window.Resources>
        <Style  TargetType="{x:Type ListBoxItem}">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="Background" Value="#e7e7e7"></Setter>
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#c7c7c7"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
